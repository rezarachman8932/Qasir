<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_shadow"
    android:padding="@dimen/dp_16"
    android:layout_marginBottom="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_icon_product"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_200"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:textColor="@color/main_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_icon_product"/>

    <TextView
        android:id="@+id/tv_price_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="@dimen/dp_4"
        android:textColor="@color/brownish_grey"
        app:layout_constraintTop_toBottomOf="@id/tv_title_product"
        app:layout_constraintStart_toEndOf="@id/iv_icon_product"/>

    <TextView
        android:id="@+id/tv_stock_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_stock"
        android:textColor="@color/warm_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_quantity_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warm_grey"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@id/tv_stock_label"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>